<div class="flash">
    <% if(info.length) { %>
        <div class="info">
            <%= info %>
        </div>
        <% } %>
            <% if(error.length) { %>
                <div class="error">
                    <%= error %>
                </div>
                <% } %>
                    <% if(success.length) { %>
                        <div class="success">
                            <%= success %>
                        </div>
                        <% } %>
</div>